        android:layout_marginEnd="1dp">

    </com.google.android.material.tabs.TabLayout>

        <androidx.viewpager2.widget.ViewPager2
            android:background="@color/Rose"
            android:id="@+id/viewPager2"
            android:layout_width="0dp"
